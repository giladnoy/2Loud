<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sample="http://schemas.android.com/apk/res-auto">>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="Vibration"
        android:title="Toggle vibration" />
    <EditTextPreference
        android:defaultValue="500"
        android:inputType="number"
        android:key="editVibe"
        android:numeric="integer"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Vibration duration in milli seconds"
        sample:defaultValue="500"
        sample:key="editVibe"
        sample:summary="in milli seconds"
        sample:title="Vibration duration" />
    <!--<SeekBarPreference
        android:key="editVibe"
        android:title="Vibration length"
