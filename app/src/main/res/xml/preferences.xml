    <EditTextPreference
        android:defaultValue="80"
        android:key="editMax"
        android:numeric="integer"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Sound Limit in decibels"
        sample:defaultValue="80"
        sample:key="editMax"
        sample:title="Sound Limit" />
    <RingtonePreference
        android:defaultValue=""
        android:key="editSound"
        android:ringtoneType="notification"
        android:title="Choose alarm sound"
        sample:key="editSound" />
    <EditTextPreference
        android:defaultValue="100"
        android:key="editVol"
        android:numeric="integer"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Set alarm volume (0-100)"
        sample:key="editVol"
        sample:title="Set alarm volume" />
